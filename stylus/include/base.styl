fontFace( 'Raleway', normal, 'https://storage.googleapis.com/purple-monkey/Raleway/Raleway-Regular.ttf' )
fontFace( 'Raleway', 700, 'https://storage.googleapis.com/purple-monkey/Raleway/Raleway-Bold.ttf' )
fontFace( 'Raleway', 300, 'https://storage.googleapis.com/purple-monkey/Raleway/Raleway-Light.ttf' )

html
    font-size: 100%
    height: 100%
    
*,
*::before,
*::after
    box-sizing: border-box

body 
    background-color: white
    height: 100%
    font-family: Raleway,Helvetica,Arial,sans-serif
    font-size: 1rem
    font-weight: 400
    line-height: 1.5rem
    margin: 0
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

a
    cursor: pointer
    text-decoration: none

    &:hover
        text-decoration: underline

img
    display: block
    width: 100%
    opacity: 1
    transition: opacity .5s
    &[data-src]
        opacity: 0  
    
h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-weight: 500
    line-height: 1.2rem
    letter-spacing: 1px
    
p
    margin-top: 0
    margin-bottom: 1rem
    
ol, ul, li
    list-style-type: none
    padding: 0
    margin: 0
    -webkit-margin-start: 0rem
    -webkit-margin-end: 0rem
    -webkit-margin-before: 0rem
    -webkit-margin-after: 0rem
    
input,
button,
select,
textarea
    margin: 0
    border-radius: 0

    &:focus
        outline: 0

.hidden
    display: none !important
    
.clearfix 
    display: inline-block

    &:after
        visibility: hidden
        display: block
        font-size: 0
        content: " "
        clear: both
        height: 0
    
* html .clearfix
    height: 1%

.clearfix 
    display: block

.link
    color: $HazyGreen
    cursor: pointer

    &:hover
        text-decoration: underline

.floating
    border: none
    background-color: $DarkGreen
    border-radius: 2rem
    color: white
    font-size: .5rem
    line-height: 2rem
    height: 3rem
    padding: 0rem
    position: absolute
    width: 3rem

.side-by-side
    align-items: center
    display: flex

.no-select {
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
    -khtml-user-select: none; /* Konqueror HTML */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently supported by Chrome and Opera */
}

.animate-in {
    animation: fadeIn .3s ease-in-out;
}

.animate-out {
    animation: fadeOut .3s ease-in-out;
}

.animate-in-slow {
    animation: fadeIn 3s ease-in-out;
}

.animate-out-slow {
    animation: fadeOut 3s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
}
